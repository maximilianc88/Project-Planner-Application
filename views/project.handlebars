<script src="../js/project.js"></script>

<div class="container">
  <div class="columns is-mobile">

    <div class="column is-one-third-widescreen">

      <div class="level">
        <div class="level-item">
          <div class="title is-2">
            {{ name }}
          </div>
        </div>
      </div>

      <p class="heading">
        Project Description
      </p>
      <p class="title is-5">
        {{ description }}
      </p>

      <p class="heading">
        Create Date
      </p>
      <p class="title is-5">
        {{ create_date }}
      </p>

      <p class="heading">
        Due Date
      </p>
      <p class="title is-5">
        {{ due_date }}
      </p>

      <p class="heading">
        Project ID
      </p>
      <p class="title is-5">
        {{ id }}
      </p>

      <p class="heading">
        Assigned Team ID
      </p>
      <p class="title is-5">
        {{ team_id }}
      </p>

      <p class="heading">
        Assigned Team Name
      </p>
      <p class="title is-5">
        {{ Team.dataValues.name }}
      </p>


    </div>

    <div class="column is-two-third-widescreen">
      <p class="heading">
        Tasks
      </p>
      
      {{#each Tasks}}
        {{ dataValues.id }}
      {{/each}}
    </div>

  </div>
</div>