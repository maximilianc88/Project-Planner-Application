<div id="view-project" class="container">

  <div class="level">
    <div class="level-item">
      <div class="title is-2">
        {{ name }}
      </div>
    </div>
  </div>

  <div class="columns is-tablet">

    <div class="column is-one-third-widescreen">


      <div class="container is-mobile level">
        <div class="level-left">
          <p class="heading level-item">
            Project Description
          </p>
        </div>
        <div class="level-right">
          <button class="button is-small level-item edit-button">Edit</button>
        </div>
      </div>

      <p class="title is-5 description" style="display: block;" data-project-id="{{ id }}">
{{ description }}
      </p>
      <textarea class="textarea is-medium description" style="display: none;" rows="2">
{{description}}
      </textarea>


      <p class="heading">
        Create Date
      </p>
      <p class="title is-5">
        {{ create_date }}
      </p>

      <p class="heading">
        Due Date
      </p>
      <p class="title is-5">
        {{ due_date }}
      </p>

      <p class="heading">
        Project ID
      </p>
      <p class="title is-5">
        {{ id }}
      </p>

      <p class="heading">
        Assigned Team ID
      </p>
      <p class="title is-5">
        {{ team_id }}
      </p>

      <p class="heading">
        Assigned Team Name
      </p>
      <p class="title is-5">
        {{ Team.dataValues.name }}
      </p>

    </div>

    <div class="column is-two-thirds-widescreen">
      <p class="heading">
        Tasks
      </p>

      <table class="table">
        <thead>
          <tr>
            <th>
              <div class="title is-6">Task ID</div>
            </th>
            <th>
              <div class="title is-6">Task Name</div>
            </th>
            <th>
              <div class="title is-6">Assignee ID</div>
            </th>
            <th>
              <div class="title is-6">Assignee Name</div>
            </th>
          </tr>
        </thead>

        <tbody>
          {{#each Tasks}}
          <tr>
            <th>{{ dataValues.id }}</th>
            <td><a href="/task/{{ dataValues.id }}">{{ dataValues.title }}</a></td>
            <td>{{ dataValues.assignee_id }}</td>
            <td>{{ dataValues.User.dataValues.first_name }} {{ dataValues.User.dataValues.last_name }}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>

    </div>

  </div>
</div>

<script src="../js/project.js"></script>