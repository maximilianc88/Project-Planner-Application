<script src="js/dashboard.js"></script>

<div class="container">
    <br>
    <div class="level">
        <div class="level-item">
            <div class="has-text-centered">
                <p class="title is-2">Dashboard</p>
            </div>
        </div>
    </div>

    <div class="columns is-centered is-tablet">
        <div class="column">
            <div class="title is-3">Projects</div>
            {{#each this.projects }}
            <p class=""><a href="project/{{ dataValues.id }}">{{ dataValues.name }}</a></p>
            {{/each}}
        </div>

        <div class="column">
            <div class="title is-3">Tasks</div>
            {{#each this.tasks }}
            <p class=""><a href="task/{{ dataValues.id }}">{{ dataValues.title }}</a></p>
            {{/each}}
        </div>
    </div>

</div>